			//- LEFT COLUMN - Product Information (col-9)
			.product-detail-left

				//- PRODUCT GALLERY & INFO
				.product-detail-hero
					.product-gallery
						//- Thumbnail Navigation
						.gallery-thumbnails
							button.thumb-nav.thumb-prev.btn-slider-2
								i.fa-solid.fa-chevron-up
							.swiper.thumbs-slider
								.swiper-wrapper
									- for(var i=1; i<=10; i++)
										.swiper-slide
											.thumbnail-item
